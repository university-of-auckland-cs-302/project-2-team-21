<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#323B5A"
    android:id="@+id/category_listview_card">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#323B5A"
        android:padding="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/category_listview_icon"
            android:adjustViewBounds="true"
            android:src="@drawable/nike_af1_1"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/category_listview_text"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#C2F0E8"
            android:text="Nike Air Force 1"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>