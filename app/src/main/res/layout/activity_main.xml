<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#C9CFE1"
    android:layout_width="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry" />
        <androidx.appcompat.widget.SearchView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:queryHint="Search for shoes..."
            android:inputType="text"
            android:minHeight="45dp"
            android:id="@+id/searchview"
            android:textColorHint="#C2F0E8"
            tools:ignore="HardcodedText"
            android:submitBackground="@drawable/rounded_searchview"
            android:background="@drawable/rounded_searchview"/>


    </LinearLayout>

    <TextView
        android:id="@+id/TopPicks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/TopPicks"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Top Picks"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/TopPicksShoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopPicks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2.5dp"
        android:gravity="center"
        android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/TopPicks"
        android:id="@+id/recyclerview" >

    </androidx.recyclerview.widget.RecyclerView>
