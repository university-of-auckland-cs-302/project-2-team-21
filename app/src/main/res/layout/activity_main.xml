    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/NikeClouds"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/TopPicksShoes"
        android:src="@drawable/nikeclouds"
        android:layout_marginTop="50dp"
        android:paddingStart="5dp"

        app:civ_border_color="#FFFF"
        app:civ_border_width="2dp"

        tools:ignore="RtlSymmetry" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="70dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Nike"
        android:layout_below="@id/TopPicksShoes"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/adidasclouds"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/TopPicksShoes"
        android:layout_centerVertical="@id/adidasText"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="2dp"
        android:layout_alignRight="@id/adidasText"

        android:src="@drawable/adidasclouds"
        app:civ_border_color="#FFFF"

        app:civ_border_width="2dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/adidasText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TopPicksShoes"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="right"
        android:paddingRight="70dp"

        android:text="Adidas"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pumalogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/pumatext"
        android:layout_centerVertical="@id/adidasText"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="100dp"

        android:layout_alignRight="@id/adidasText"

        android:src="@drawable/pumalogo"
        app:civ_border_color="#000000"

        app:civ_border_width="2dp"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/pumatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="169dp"
        android:layout_below="@id/NikeClouds"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="right"
        android:paddingRight="55dp"
        android:text="Puma"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"/>



